{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "eslint",
        "type": "shell",
        "command": "npx eslint . --ext .ts,.js",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$eslint-stylish"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "runOptions": {
          "runOn": "folderOpen"
        }
      }
    ]
  }
  